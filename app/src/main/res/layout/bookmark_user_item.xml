<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="100dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_marginBottom="3dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <FrameLayout
            android:layout_width="125dp"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imageViewHinhBookmarkUser"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
            <TextView
                android:id="@+id/textViewGiaTienBookmarkUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:textSize="15sp"
                android:background="#2196F3"
                android:textColor="#181817"/>
        </FrameLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:id="@+id/textViewMoTaBookmarkUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="111111111"
                android:layout_margin="4dp"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/textViewDiaChiBookmarkUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="111111111"
                android:layout_margin="4dp"
                android:maxLines="1"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/textViewDienTichBookmaekUser"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:text="111111111"
                android:layout_margin="4dp"
                android:maxLines="1"
                android:ellipsize="end"/>
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>